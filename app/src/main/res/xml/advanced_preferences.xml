<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:anrdoid="http://schemas.android.com/apk/res-auto"
    android:title="Advanced">
    <PreferenceCategory android:title="Network">
        <EditTextPreference
            android:title="Hostname"
            android:key="setting_server_hostname"
            android:defaultValue="@string/settings_server_hostname" />

        <CheckBoxPreference
            android:title="Use HTTPS"
            android:key="setting_server_use_https"
            android:defaultValue="true" />

        <EditTextPreference
            android:title="Port"
            android:key="setting_server_port" />
    </PreferenceCategory>
</PreferenceScreen>
